<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Title"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.016" />

    <TextView
        android:id="@+id/list_textViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/list_textViewTitle"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/list_textViewTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.029" />

    <TextView
        android:id="@+id/list_textViewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:text="Password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/list_textViewUsername"
        app:layout_constraintRight_toRightOf="@+id/list_textViewUsername"
        app:layout_constraintTop_toBottomOf="@+id/list_textViewUsername"
        app:layout_constraintVertical_bias="0.029" />

    <Button
        android:id="@+id/list_buttonEdit"
        android:layout_width="67dp"
        android:layout_height="39dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:text="Edit"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/list_textViewUsername"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/list_buttonDelete"
        app:layout_constraintRight_toRightOf="@+id/list_buttonDelete"
        app:layout_constraintTop_toTopOf="@+id/list_textViewUsername"
        app:layout_constraintVertical_bias="0.933" />

    <Button
        android:id="@+id/list_buttonDelete"
        android:layout_width="67dp"
        android:layout_height="39dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Delete"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/list_textViewPassword"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintLeft_toRightOf="@+id/list_textViewPassword"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/list_textViewPassword" />
</android.support.constraint.ConstraintLayout>